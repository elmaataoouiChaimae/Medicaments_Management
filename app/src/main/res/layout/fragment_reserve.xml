<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".CommandActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textSize="36sp"
                android:layout_marginStart="44dp"
                android:textStyle="bold"
                android:textColor="@color/app_color"/>

            <TextView
                android:id="@+id/produit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:textSize="20sp"
                android:text="produit"
                android:textColor="@color/app_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/name"
                android:background="@drawable/edit_text"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:inputType="textPersonName"
                android:hint="Full name"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawableTint="@color/app_color"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/phone"
                android:inputType="phone"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Phone number"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/app_color"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/adresse"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Address"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_baseline_home_work_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/app_color"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/qte"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:inputType="number"
                android:hint="quantity off medicine"
                android:drawableLeft="@drawable/ic_baseline_medical_services_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/app_color"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Confirm"
                android:id="@+id/confirm"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/app_color"
                app:cornerRadius = "20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeRedirect"
                android:text="Back to home"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/app_color"
                android:textSize="18sp"/>
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                tools:layout_editor_absoluteX="72dp"
                tools:layout_editor_absoluteY="55dp">

            </FrameLayout>
        </LinearLayout>



    </LinearLayout>
</layout>